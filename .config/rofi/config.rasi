configuration {
  modes: "drun"; // Default : window,drun,run,ssh
  font: "0xProto Nerd Font 14";
  show-icons: true;
  terminal: "alacritty";
  icon-theme: "Reversal-dark";
  display-drun: "";
  drun-display-format: "{name}";
  sidebar-mode: false;

  timeout {
      action: "kb-cancel";
      delay:  0;
  }
  filebrowser {
      directories-first: true;
      sorting-method:    "name";
  }
}

@theme "themes/foggy_forest.rasi"
